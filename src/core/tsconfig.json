{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "target": "es2021",                               
    "module": "commonjs",                      
    "rootDir": ".",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },                           

   
    "outDir": "./dist",                               

    "forceConsistentCasingInFileNames": true,       

    "strict": true,                            
    "skipLibCheck": true                              
  }
}
