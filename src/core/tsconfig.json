{
  "compilerOptions": {

    "target": "es2021",                               
    "module": "commonjs",                      
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src/*"]
    },                           

   
    "outDir": "./dist",                               

    "forceConsistentCasingInFileNames": true,       

    "strict": true,                            
    "skipLibCheck": true                              
  }
}
