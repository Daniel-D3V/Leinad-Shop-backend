generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Category {

  id String @id
  title String @unique @default("")
  description String? @db.Text
  status String @default("DEACTIVATED")
  parentId    String?
  parent      Category? @relation("CategoryToParent", fields: [parentId], references: [id], onDelete: Cascade)
  children    Category[] @relation("CategoryToParent")

  @@map("categories")
}

model Announce {

  id String @id
  title String @default("")
  description String? @db.Text 
  status String @default("DEACTIVATED")
  price Float @default(0.50)
  stockType String @default("NORMAL")

  userId String?
  categoryId String?  


  @@map("announces")
}

model ProductStockNormal {
      id String @id
      stock Int
      announceId String @unique()
    
      @@map("product_stock_normal")
}

model ProductStockAuto {
  
    id String @id
    value String
    announceId String 
  
    @@map("product_stock_auto")
}

model AnnounceImages {

  id String @id @default(uuid())
  weight Int
  url String

  announceId String

  @@map("announce_images")
}

model User {
  id String @id @default(uuid())
  username String @unique
  email String @unique
  password String 

  @@map("users") 
}

model Outbox {

  id String @id @default(uuid())
  payload String @db.Text
  eventName String 
  timestamp DateTime
  status    String @default("PENDING")
  error_message    String @default("PENDING")
  retry_count Int @default(0)

  @@map("outbox")
}