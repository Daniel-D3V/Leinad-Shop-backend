generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Category {

  id String @id
  title String @unique
  description String @db.Text
  status String 
  parentId    String?
  parent      Category? @relation("CategoryToParent", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryToParent")

  @@map("categories")
}

model Announce {

  id String @id
  title String
  description String @db.Text
  status String 
  price Int

  categoryId String
  userId String

  announceImages AnnounceImages[]

  @@map("announces")
}

model AnnounceImages {

  id String @id @default(uuid())
  weight Int
  url String

  announceId String

  Announce    Announce    @relation(fields: [announceId], references: [id])
  @@map("announce_images")
}

model Outbox {

  id String @id @default(uuid())
  payload String @db.Text
  eventName String 
  timestamp DateTime
  status    String @default("PENDING")
  error_message    String @default("PENDING")
  retry_count Int @default(0)

  @@map("outbox")
}