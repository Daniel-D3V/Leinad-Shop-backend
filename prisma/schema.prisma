generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Category {

  id String @id
  title String 
  description String @db.Text
  status String 
  parentId    String?
  parent      Category? @relation("CategoryToParent", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryToParent")

  @@map("categories")
}